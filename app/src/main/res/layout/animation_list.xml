<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:background="#d9d9d9"
android:orientation="horizontal"
android:padding="16dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:src="@drawable/escape" />

    <TextView
        android:id="@+id/animation_title"
        android:layout_width="249dp"
        android:layout_height="48dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="25dp"
        android:text="Liste des animations"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/date_button"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="23dp"
        android:backgroundTint="#b88a50"
        android:contentDescription="date_button"
        android:src="@mipmap/ic_calendar"
        android:padding="5dp" />

    <Button
        android:id="@+id/show_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="150dp"
        android:text="Show all"
        android:textSize="13dp"
        android:backgroundTint="#b88a50"/>

    <TextView
        android:id="@+id/animations_date"
        android:layout_width="171dp"
        android:layout_height="39dp"
        android:layout_below="@id/icon"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="5dp"
        android:text="12/08/2022"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/animation_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/animations_date"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="40dp"
        android:paddingBottom="20dp"
        android:textSize="10dp" />

    <Button
        android:id="@+id/showUserInfo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="50dp"/>



</RelativeLayout>